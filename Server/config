# Шаблон конфигурации сервера системы RO
{
# параметры соединения с БД системы
    'database' => {
	'db_driver' => 'mysql', # используемый драйвер для работы с СУБД
	'db_name' => 'ro', # имя БД
	'db_host' => 'localhost', # хост, на котором работает СУБД
	'db_user' => 'ro', # имя пользователя для подключения к БД
	'db_passwd' => 'ro', # пароль пользователя для подключения к БД
	'db_options' => {   RaiseError => 1, # ряд дополнительных параметров
			    ChopBlanks => 1, # для работы с БД
			    AutoCommit => 1 }
    },

# секция лог-файла
    'log'	=> {	'use_log'	=> 1,# флаг записи в лог
			'log_file'	=> '/var/log/ro_log' # местоположение
							     # лога
    }
};

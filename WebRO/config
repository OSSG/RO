# Шаблон конфигурации сервера системы RO
{
# параметры соединения с БД системы
    'database' => {
	'db_driver' => 'mysql', # используемый драйвер для работы с СУБД
	'db_name' => 'ro', # имя БД
	'db_host' => 'localhost', # хост, на котором работает СУБД
	'db_user' => 'ro', # имя пользователя для подключения к БД
	'db_passwd' => 'ro', # пароль пользователя для подключения к БД
	'db_options' => {   RaiseError => 1, # ряд дополнительных параметров
			    ChopBlanks => 1, # для работы с БД
			    AutoCommit => 1 }
    },

# местоположение кеша для предподготовленных шаблонов
    'cache' => '/var/spool/webro/',

# количество пакетов на одной странице списка пакетов
# параметр опциональный, значение по-умолчанию - 25
    'packages_list_limit' => 50,

# количество узлов на одной странице списка узлов
# параметр опциональный, значение по-умолчанию - 25
    'nodes_list_limit' => 20,

# количество репозиториев, видимых в списке доступных репозиториев
# в форме редактирования системы, значение по-умолчанию - 5
    'repositories_list_limit' => 10,

# действие по-умолчанию - при запросе корневого URL WebRO
# возможные варианты - 'nodes' (для вывода списка узлов системы RO) или
# 'packages' (для вывода списка всех известных системе RO пакетов)
# параметр опциональный, значение по-умолчанию - 'nodes'
    'default_action' => 'nodes',

# URL статических файлов WebRO (закрывающий слэш обязателен)
    'static' => '/webro_static/'
};
